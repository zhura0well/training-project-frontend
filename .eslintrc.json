{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "array-element-newline": ["error", "consistent"],
        "comma-style": ["error", "last"],
        "comma-dangle": ["error", "only-multiline"],
        "indent": [
            "error",
            2,
            {
                "ignoredNodes": ["TemplateLiteral"]
            }
        ],
        "no-trailing-spaces": ["error"],
        "semi": ["error", "never"]
    }
}
